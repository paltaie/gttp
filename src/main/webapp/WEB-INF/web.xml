<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5"
	id="WebApp_ID">

	<display-name>GtTP</display-name>

	<servlet>
		<servlet-name>gttp</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>gttp</servlet-name>
		<url-pattern>*.gttp</url-pattern>
	</servlet-mapping>

	<filter>
		<display-name>DisableUrlSessionFilter</display-name>
		<filter-name>DisableUrlSessionFilter</filter-name>
		<filter-class>com.paltaie.gttp.filters.DisableUrlSessionFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>DisableUrlSessionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>
